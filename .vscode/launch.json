{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Ember CLI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ember-cli/bin/ember",
            "args": [
                "serve"
            ]
        },
        {
            "name": "Run Fastboot Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ember-cli/bin/ember",
            "args": [
                "fastboot:test"
            ]
        }
    ]
}
